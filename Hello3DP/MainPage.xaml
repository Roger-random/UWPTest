<Page
    x:Class="Hello3DP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hello3DP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBlock x:Name="topLabel"
                       Text="3D Printer Serial Communication Test"
                       TextWrapping="Wrap"
                       FontSize="24"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"/>
            <TextBox x:Name="textOutput"
                     Text="Application starting..."
                     TextWrapping="Wrap"
                     RelativePanel.AlignBottomWithPanel="True"
                     RelativePanel.Below="topLabel"
                     RelativePanel.AlignLeftWith="topLabel"
                     RelativePanel.AlignRightWith="topLabel"
                     FontSize="16"
                     IsReadOnly="True"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        </RelativePanel>

    </Grid>
</Page>
